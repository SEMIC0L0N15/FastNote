<UserControl x:Class="FastNote.NoteBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:local="clr-namespace:FastNote"
             xmlns:core="clr-namespace:FastNote.Core;assembly=FastNote.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{x:Static core:NoteBoxDesignModel.Instance}">
    <!-- DataContext="{x:Static core:NoteBoxDesignModel.Instance}" -->

    
        <Grid Background="{StaticResource BackgroundDarkerBrush}">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Margin="15 0 15 10" Grid.Row="0" 
                BorderBrush="{StaticResource BorderLightBrush}" 
                    BorderThickness="1 0 1 1">
                
                <ListBox BorderThickness="0" 
                     x:Name="ListBox" 
                     ItemsSource="{Binding Items}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Background="Transparent">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.Resources>


                    </ListBox.Resources>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">

                            <Setter Property="Background" Value="{StaticResource BackgroundSuperDarkBrush}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected}"/>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">


                                        <Button x:Name="button"
                                            Content="{Binding Content}"   
                                            Style="{StaticResource TextButton}"
                                            Foreground="White" 
                                            FontSize="15"
                                            Background="{TemplateBinding Background}"
                                            Click="Item_OnClick"
                                            LostFocus="Item_OnLostFocus"
                                            Margin="0"
                                            Padding="15"
                                            BorderThickness="0 1 0 0"
                                            BorderBrush="{StaticResource BorderLightBrush}"/>



                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AzureLightBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" TargetName="button" Value="{StaticResource AzureDarkBrush}"/>
                                                <Setter Property="BorderBrush" TargetName="button" Value="{StaticResource AzureDarkBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>




                                </Setter.Value>
                            </Setter>

                        </Style>
                    </ListBox.ItemContainerStyle>


                </ListBox>
            </Border>



            <TextBox Grid.Row="1" 
                     Margin="15 0 15 10" 
                     Height="50" 
                     Background="{StaticResource BackgroundUltraDarkBrush}"
                     Tag="Napisz coś..."
                     Text="{Binding TypedText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding PushNoteCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

</UserControl>
